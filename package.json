{
  "name": "@tfs-8/basecss",
  "version": "0.9.4",
  "private": false,
  "type": "module",
  "description": "BaseCSS is a lightweight css library designed to simplify responsive and scalable web design.",
  "main": "base.min.css",
  "style": "base.min.css",
  "files": [
    "base.css",
    "base.min.css"
  ],
  "scripts": {
    "create": "cat src/*.css > base.css",
    "build": "npm run create && npm run format && npm run minify",
    "minify": "clean-css-cli base.css -o base.min.css",
    "format": "prettier -w ."
  },
  "keywords": [
    "css",
    "library",
    "responsive-design",
    "lightweight-css",
    "minimal-css",
    "frontend",
    "web-design",
    "modern-css",
    "css-library"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MFM-347/BaseCSS.git"
  },
  "bugs": {
    "url": "https://github.com/MFM-347/BaseCSS/issues"
  },
  "author": {
    "name": "Farhan Madni",
    "url": "https://github.com/mfm-347",
    "email": "madnifm347@outlook.com"
  },
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "prettier": "^3.4.2"
  }
}
