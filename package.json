{
  "name": "@tfs-8/basecss",
  "version": "1.0.2",
  "private": false,
  "type": "commonjs",
  "description": "BaseCSS is a lightweight css library designed to simplify responsive and scalable web design.",
  "main": "dist/base.min.css",
  "style": "dist/base.min.css",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "npm run format && node build.js",
    "prepublishOnly": "npm run build && npm uninstall prettier @nirtamir2/prettier-plugin-css-order",
    "postpublishOnly": "npm i prettier@latest @nirtamir2/prettier-plugin-css-order -D",
    "format": "prettier -w ."
  },
  "keywords": [
    "css",
    "html",
    "web",
    "ui",
    "library",
    "basecss",
    "reset",
    "base",
    "normal-css",
    "css3",
    "responsive-design",
    "lightweight-css",
    "minimal-css",
    "frontend",
    "web-design",
    "modern-css",
    "css-reset"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MFM-347/BaseCSS.git"
  },
  "bugs": {
    "url": "https://github.com/MFM-347/BaseCSS/issues"
  },
  "author": {
    "name": "Farhan Madni",
    "url": "https://xyzdev.vercel.app"
  },
  "devDependencies": {
    "@nirtamir2/prettier-plugin-css-order": "^0.0.1",
    "lightningcss": "^1.29.2",
    "prettier": "^3.5.3"
  },
  "license": "MIT"
}
